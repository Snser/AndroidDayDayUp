<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    tools:context="${relativePackage}.${activityClass}" >
    
    <fragment
        android:id="@+id/viewpager_doublelayer_list_item_title"
        android:name="cc.snser.share.viewbase.components.TitleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_doublelayer_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewpager_doublelayer_container"
        android:layout_below="@+id/viewpager_doublelayer_list_item_title" />
    
    <FrameLayout
        android:id="@id/viewpager_doublelayer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >
    </FrameLayout>
    
</RelativeLayout>
